extends layout

block content
  div.w3-container
    h1.w3-center= "Authors"
    .w3-row-padding
      .w3-col.w3-container(style='width:10%')
        p
      .w3-col(style='width:80%')
        ul.w3-ul.w3-card  
        each user in lista
          
          .w3-card.w3-row-padding.w3-padding.w3-white
            img.w3-circle(src='img_avatar.png' style='width:85px' alt='some image')
            if user.name
              h3= user.name
            else 
              h3= "Name Not Registered"
            a(href="/" + user.id)= "More information about this author"

          br
        //a.w3-button.w3-white(href="/") Home Page
      .w3-col.w3-container(style='width:10%')
        p
  div.footer.w3-border
    h5='Last update at: ' + lastUpdate.split(" (")[0]