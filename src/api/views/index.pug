extends layout

block content
  h1.w3-center.w3-text-white= "Lista de Utilizadores"
  p #{title}
  .w3-row
    .w3-col.s4.w3-center
      p 
    .w3-col.s4.w3-center
      .w3-card.w3-light-grey
        ul.w3-ul.w3-card-4
        each user in lista
            br
            img.w3-circle(src='img_avatar.png' style='width:85px' alt='some image')
            if user.name
              p.w3-large= user.name
            else 
              p.w3-large= "Sem nome registado!"
            a(href="/" + user.id)= user.id
            br
            br
    .w3-col.s4.w3-center
      p 
    
          
      

  
  
